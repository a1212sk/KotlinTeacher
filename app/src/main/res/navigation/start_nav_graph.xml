<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/start_nav_graph"
    app:startDestination="@id/firstFragment"
    xmlns:tools="http://schemas.android.com/tools">

    <fragment
        android:id="@+id/firstFragment"
        android:name="alexander.skornyakov.kotlinteacher.ui.start.first.FirstFragment"
        android:label="FirstFragment"
        tools:layout="@layout/start_first_fragment"
        >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/firstFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="alexander.skornyakov.kotlinteacher.ui.start.first.SecondFragment"
        android:label="SecondFragment"
        tools:layout="@layout/start_second_fragment"/>
</navigation>